{
  "compilerOptions": {
    // Target y m贸dulos para Node
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],

    // Carpeta de salida
    "outDir": "./dist",
    "rootDir": ".",

    // Metadatos necesarios para TypeORM
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Configuraci贸n menos estricta para testing
    "strict": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,

    // Mapas de fuente y declaraciones
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Compatibilidad con Node
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Resoluci贸n de m贸dulos
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,

    // Tipos para testing
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "**/*.test.ts", "**/*.spec.ts"]
}
