{
  "compilerOptions": {
    // Target y m√≥dulos para Node
    "target": "ES2020",
    "module": "commonjs",

    // Carpeta de salida
    "outDir": "./dist",
    "rootDir": "./src",

    // Metadatos necesarios para TypeORM
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Estrictas
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Mapas de fuente y declaraciones
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Compatibilidad con Node
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
